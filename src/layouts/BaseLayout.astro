---
const { title = 'tonoi株式会社', description = 'Hybrid Computingで次世代のIT処理基盤をデザインするtonoi株式会社のコーポレートサイトです。', ogImage = '/images/top.jpeg' } = Astro.props;
---
<!DOCTYPE html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:site_name" content="tonoi株式会社" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://tonoi.co.jp" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" type="image/png" href="/icon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;600;700&family=Noto+Serif+JP:wght@500;600&display=swap"
      rel="stylesheet"
    />
    <meta name="theme-color" content="#10172a" />
    <slot name="head" />
    <link rel="stylesheet" href={Astro.resolve('../styles/global.css')} />
  </head>
  <body class="bg-slate-950 text-slate-200">
    <div class="relative flex min-h-screen flex-col">
      <header class="sticky top-0 z-50 backdrop-blur-sm bg-slate-950/85 border-b border-white/10">
        <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-4">
          <a href="/" class="flex items-center gap-3 font-semibold tracking-tight text-brand-100">
            <img src="/tonoi_logo.svg" alt="tonoi" class="h-8 w-8" />
            <span class="text-lg">tonoi株式会社</span>
          </a>
          <nav class="hidden items-center gap-8 text-sm font-medium text-slate-200 md:flex">
            <a href="#mission" class="hover:text-brand-200">Mission</a>
            <a href="#services" class="hover:text-brand-200">Services</a>
            <a href="#research" class="hover:text-brand-200">Research</a>
            <a href="#achievements" class="hover:text-brand-200">Achievements</a>
            <a href="#company" class="hover:text-brand-200">Company</a>
            <a href="#contact" class="hover:text-brand-200">Contact</a>
          </nav>
          <a
            href="#contact"
            class="hidden rounded-full bg-brand-500 px-5 py-2 text-sm font-semibold text-white shadow-soft transition hover:bg-brand-400 md:inline-flex"
          >
            お問い合わせ
          </a>
        </div>
      </header>
      <main class="flex-1">
        <slot />
      </main>
      <footer class="border-t border-white/10 bg-slate-950/90">
        <div class="mx-auto max-w-6xl px-6 py-12 text-sm text-slate-400">
          <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
            <div>
              <p class="font-semibold text-slate-200">tonoi株式会社</p>
              <p class="mt-1 text-xs text-slate-500">© {new Date().getFullYear()} tonoi Inc. All rights reserved.</p>
            </div>
            <div class="flex flex-wrap gap-4">
              <a href="/privacy_policy.pdf" class="hover:text-brand-200">プライバシーポリシー</a>
              <a href="/trademark_guidelines.pdf" class="hover:text-brand-200">商標ガイドライン</a>
              <a href="/sitemap.xml" class="hover:text-brand-200">サイトマップ</a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
