---
import type { TeamMember } from '~/data/team';

interface Props {
  member: TeamMember;
}
const { member } = Astro.props;
---
<div class="flex flex-col gap-4 rounded-3xl border border-white/5 bg-slate-900/50 p-6 transition hover:border-brand-400/40 hover:bg-slate-900/85">
  <div class="flex items-center gap-4">
    <img src={member.image} alt={member.name} class="h-16 w-16 rounded-2xl object-cover" loading="lazy" />
    <div>
      <h3 class="text-lg font-semibold text-slate-100">{member.name}</h3>
      <p class="text-sm text-slate-400">{member.role}</p>
    </div>
  </div>
  <p class="text-sm leading-relaxed text-slate-300">{member.bio}</p>
  <div class="flex flex-wrap gap-2">
    {member.focus.map((focus) => (
      <span class="rounded-full bg-white/5 px-3 py-1 text-xs font-semibold text-slate-400">{focus}</span>
    ))}
  </div>
</div>
