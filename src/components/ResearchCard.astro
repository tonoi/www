---
import type { ResearchHighlight } from '~/data/research';

interface Props {
  item: ResearchHighlight;
}
const { item } = Astro.props;
---
<div class="flex flex-col gap-4 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm transition hover:border-brand-300 hover:shadow-md">
  <h3 class="text-lg font-semibold text-slate-900 md:text-xl">{item.title}</h3>
  <p class="text-sm leading-relaxed text-slate-600 md:text-base">{item.summary}</p>
  <div class="flex flex-wrap gap-2">
    {item.tags.map((tag) => (
      <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-500">{tag}</span>
    ))}
  </div>
  <div class="mt-2 flex flex-wrap gap-3">
    {item.links.map((link) => (
      <a
        href={link.href}
        class="inline-flex items-center gap-2 text-sm font-semibold text-brand-600 hover:text-brand-700"
      >
        <span aria-hidden="true">â†—</span>
        {link.label}
      </a>
    ))}
  </div>
</div>
