---
import type { ResearchHighlight } from '~/data/research';

interface Props {
  item: ResearchHighlight;
}
const { item } = Astro.props;
---
<div class="flex flex-col gap-4 rounded-3xl border border-white/5 bg-slate-900/50 p-6 shadow-lg shadow-slate-950/30 transition hover:border-brand-400/40 hover:bg-slate-900/85">
  <h3 class="text-lg font-semibold text-slate-100 md:text-xl">{item.title}</h3>
  <p class="text-sm leading-relaxed text-slate-300 md:text-base">{item.summary}</p>
  <div class="flex flex-wrap gap-2">
    {item.tags.map((tag) => (
      <span class="rounded-full bg-white/5 px-3 py-1 text-xs font-semibold text-slate-400">{tag}</span>
    ))}
  </div>
  <div class="mt-2 flex flex-wrap gap-3">
    {item.links.map((link) => (
      <a
        href={link.href}
        class="inline-flex items-center gap-2 text-sm font-semibold text-brand-200 hover:text-brand-100"
      >
        <span aria-hidden="true">â†—</span>
        {link.label}
      </a>
    ))}
  </div>
</div>
