---
import type { ServiceItem } from '~/data/services';

interface Props {
  service: ServiceItem;
}
const { service } = Astro.props;
const categoryLabel = service.category.toUpperCase();
---
<a
  href={service.href}
  class="group flex flex-col gap-4 rounded-3xl border border-slate-200 bg-white p-8 shadow-sm transition hover:border-brand-300 hover:shadow-md"
  target={service.href.startsWith('http') ? '_blank' : undefined}
  rel={service.href.startsWith('http') ? 'noopener noreferrer' : undefined}
>
  <div class="flex items-center gap-3">
    <div class="flex h-12 w-12 items-center justify-center rounded-full bg-brand-100 text-2xl text-brand-600">
      <span aria-hidden="true">{service.icon}</span>
    </div>
    <div class="flex flex-col">
      <span class="text-xs uppercase tracking-[0.3em] text-slate-500">{categoryLabel}</span>
      <h3 class="text-lg font-semibold text-slate-900 md:text-xl">{service.name}</h3>
    </div>
  </div>
  <p class="text-sm leading-relaxed text-slate-600 md:text-base">{service.description}</p>
  {service.highlight && (
    <span class="inline-flex w-fit items-center gap-2 rounded-full bg-brand-100 px-3 py-1 text-xs font-semibold text-brand-700">
      <span class="h-1.5 w-1.5 rounded-full bg-brand-500"></span>
      {service.highlight}
    </span>
  )}
</a>
