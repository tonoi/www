---
import type { AchievementItem } from '~/data/achievements';

interface Props {
  achievement: AchievementItem;
}
const { achievement } = Astro.props;
---
<div class="relative rounded-3xl border border-slate-200 bg-white p-6 shadow-sm transition hover:border-brand-300 hover:shadow-md">
  <div class="flex items-baseline gap-3">
    <span class="text-sm font-semibold uppercase tracking-[0.3em] text-brand-600">{achievement.year}</span>
    <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{achievement.category}</span>
  </div>
  <h3 class="mt-5 text-xl font-semibold text-slate-900">{achievement.title}</h3>
  <p class="mt-3 text-sm leading-relaxed text-slate-600">{achievement.description}</p>
  {achievement.links && (
    <div class="mt-4 flex flex-wrap gap-3">
      {achievement.links.map((link) => (
        <a
          href={link.href}
          class="inline-flex items-center gap-2 rounded-full bg-brand-100 px-3 py-1 text-xs font-semibold text-brand-700 transition hover:bg-brand-200"
        >
          <span aria-hidden="true">â†’</span>
          {link.label}
        </a>
      ))}
    </div>
  )}
</div>
