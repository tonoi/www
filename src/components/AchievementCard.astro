---
import type { AchievementItem } from '~/data/achievements';

interface Props {
  achievement: AchievementItem;
}
const { achievement } = Astro.props;
---
<div class="relative rounded-3xl border border-white/5 bg-slate-900/50 p-6 transition hover:border-brand-400/40 hover:bg-slate-900/90">
  <div class="flex items-baseline gap-3">
    <span class="text-sm font-semibold uppercase tracking-[0.3em] text-brand-300">{achievement.year}</span>
    <span class="rounded-full bg-white/10 px-3 py-1 text-xs font-semibold text-slate-300">{achievement.category}</span>
  </div>
  <h3 class="mt-5 text-xl font-semibold text-slate-100">{achievement.title}</h3>
  <p class="mt-3 text-sm leading-relaxed text-slate-300">{achievement.description}</p>
  {achievement.links && (
    <div class="mt-4 flex flex-wrap gap-3">
      {achievement.links.map((link) => (
        <a
          href={link.href}
          class="inline-flex items-center gap-2 rounded-full bg-brand-500/15 px-3 py-1 text-xs font-semibold text-brand-200 transition hover:bg-brand-500/25"
        >
          <span aria-hidden="true">â†’</span>
          {link.label}
        </a>
      ))}
    </div>
  )}
</div>
