---
import type { Partner } from '~/data/partners';

interface Props {
  partner: Partner;
}
const { partner } = Astro.props;
---
<a
  href={partner.url}
  class="flex flex-col items-center gap-4 rounded-3xl border border-slate-200 bg-white p-6 text-center shadow-sm transition hover:border-brand-300 hover:shadow-md"
  target="_blank"
  rel="noopener noreferrer"
>
  <img
    src={partner.logo}
    alt={`${partner.name} ロゴ`}
    class="h-16 w-auto object-contain"
    loading="lazy"
  />
  <div class="text-center">
    <h3 class="text-base font-semibold text-slate-900">{partner.name}</h3>
    <p class="mt-2 text-sm text-slate-600">{partner.description}</p>
  </div>
</a>
